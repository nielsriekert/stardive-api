{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "es2021",
    "lib": ["es2021"],

    /* Modules */
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",

    /* Emit */
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "codegen.ts"],
  "ts-node": {
    "esm": true
  },
  "ts-node-dev": {
    "esm": true
  }
}
